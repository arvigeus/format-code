{
  "private": true,
  "name": "format-code",
  "description": "Easy and opinionated online code formatter",
  "license": "MIT",
  "scripts": {
    "prebuild": "postcss app/styles --base app/styles --dir app/build/styles --env production",
    "build": "remix build",
    "dev:css": "postcss app/styles --base app/styles --dir app/build/styles -w",
    "dev:remix": "remix dev",
    "dev": "concurrently \"npm:dev:*\"",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.0.0",
    "@codemirror/lang-html": "^6.1.0",
    "@codemirror/lang-javascript": "^6.0.2",
    "@codemirror/lang-json": "^6.0.0",
    "@codemirror/lang-markdown": "^6.0.1",
    "@codemirror/lang-sql": "^6.2.0",
    "@codemirror/lang-xml": "^6.0.0",
    "@codemirror/language": "^6.2.1",
    "@codemirror/legacy-modes": "^6.1.0",
    "@codemirror/view": "^6.2.0",
    "@lezer/highlight": "^1.0.0",
    "@prettier/plugin-xml": "^2.2.0",
    "@remix-run/node": "^1.6.8",
    "@remix-run/react": "^1.6.8",
    "@remix-run/serve": "^1.6.8",
    "@remix-run/vercel": "^1.6.8",
    "@uiw/react-codemirror": "^4.11.4",
    "codemirror-graphql": "^1.3.2",
    "graphql": "^16.5.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "remix-utils": "^3.3.0",
    "sql-formatter": "^9.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.8",
    "@remix-run/eslint-config": "^1.6.8",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.3",
    "@types/prettier": "^2.7.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-remix": "^0.0.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^14.1.0",
    "postcss-minify": "^1.1.0",
    "postcss-preset-env": "^7.7.2",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=1 lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|mjs|ts|tsx|css|md|yml)": [
      "prettier --write"
    ]
  },
  "sideEffects": false
}
