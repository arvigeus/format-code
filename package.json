{
  "private": true,
  "name": "remix-app-template",
  "description": "Easy and opinionated online code formatter",
  "license": "MIT",
  "scripts": {
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "build": "concurrently \"npm:build:*\"",
    "dev:css": "postcss app/styles --base app/styles --dir app/build/styles -w",
    "dev:remix": "node -r dotenv/config node_modules/.bin/remix dev",
    "dev": "concurrently \"npm:dev:*\"",
    "postinstall": "remix setup node",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@codemirror/highlight": "^0.19.7",
    "@codemirror/lang-css": "^0.19.3",
    "@codemirror/lang-html": "^0.19.4",
    "@codemirror/lang-javascript": "^0.19.6",
    "@codemirror/lang-json": "^0.19.1",
    "@codemirror/lang-markdown": "^0.19.4",
    "@codemirror/lang-sql": "^0.19.4",
    "@codemirror/lang-xml": "^0.19.2",
    "@codemirror/legacy-modes": "^0.19.0",
    "@codemirror/stream-parser": "^0.19.3",
    "@codemirror/view": "^0.19.39",
    "@ddietr/codemirror-themes": "^1.0.9",
    "@prettier/plugin-xml": "^1.2.0",
    "@remix-run/node": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@remix-run/vercel": "^1.1.1",
    "@uiw/react-codemirror": "^4.3.3",
    "dotenv": "^12.0.3",
    "graphql": "^16.2.0",
    "prettier": "^2.5.1",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.26.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "remix": "^1.1.1",
    "remix-utils": "^2.4.0",
    "sql-formatter": "^4.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/prettier": "^2.4.3",
    "@types/prismjs": "^1.16.6",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-remix": "^0.0.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^7.3.1",
    "postcss-minify": "^1.1.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=1 lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|mjs|ts|tsx|css|md|yml)": [
      "prettier --write"
    ]
  },
  "sideEffects": false
}
