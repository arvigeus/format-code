{
  "private": true,
  "name": "remix-app-template",
  "description": "Easy and opinionated online code formatter",
  "license": "MIT",
  "scripts": {
    "prebuild": "postcss app/styles --base app/styles --dir app/build/styles --env production",
    "build": "remix build",
    "dev:css": "postcss app/styles --base app/styles --dir app/build/styles -w",
    "dev:remix": "remix dev",
    "dev": "concurrently \"npm:dev:*\"",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@codemirror/highlight": "^0.19.8",
    "@codemirror/lang-css": "^0.20.0",
    "@codemirror/lang-html": "^0.20.0",
    "@codemirror/lang-javascript": "^0.20.0",
    "@codemirror/lang-json": "^0.20.0",
    "@codemirror/lang-markdown": "^0.20.1",
    "@codemirror/lang-sql": "^0.20.0",
    "@codemirror/lang-xml": "^0.20.0",
    "@codemirror/legacy-modes": "^0.20.0",
    "@codemirror/stream-parser": "^0.19.9",
    "@codemirror/view": "^0.20.6",
    "@ddietr/codemirror-themes": "^1.1.0",
    "@prettier/plugin-xml": "^2.2.0",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@remix-run/vercel": "^1.5.1",
    "@uiw/react-codemirror": "^4.7.0",
    "graphql": "^16.5.0",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-icons": "^4.3.1",
    "remix-utils": "^3.2.0",
    "sql-formatter": "^6.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@types/prettier": "^2.6.1",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-remix": "^0.0.2",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "postcss-minify": "^1.1.0",
    "postcss-preset-env": "^7.6.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=1 lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|mjs|ts|tsx|css|md|yml)": [
      "prettier --write"
    ]
  },
  "sideEffects": false,
  "overrides": {
    "@codemirror/state": "^0.20.0"
  }
}
