{
  "private": true,
  "name": "format-code",
  "description": "Easy and opinionated online code formatter",
  "license": "MIT",
  "scripts": {
    "prebuild": "postcss app/styles --base app/styles --dir app/build/styles --env production",
    "build": "remix build",
    "dev:css": "postcss app/styles --base app/styles --dir app/build/styles -w",
    "dev:remix": "remix dev",
    "dev": "concurrently \"npm:dev:*\"",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" --ignore-path .gitignore .",
    "prepare": "husky"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/lang-html": "^6.4.8",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/lang-sql": "^6.6.2",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/language": "^6.10.1",
    "@codemirror/legacy-modes": "^6.3.3",
    "@codemirror/view": "^6.26.0",
    "@lezer/highlight": "^1.2.0",
    "@prettier/plugin-xml": "^3.3.1",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "@remix-run/serve": "^1.19.3",
    "@remix-run/vercel": "^1.19.3",
    "@uiw/codemirror-theme-vscode": "^4.21.25",
    "@uiw/codemirror-themes": "^4.21.25",
    "@uiw/react-codemirror": "^4.21.25",
    "codemirror-graphql": "^2.0.10",
    "graphql": "^16.8.1",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "remix-utils": "^7.5.0",
    "sql-formatter": "^15.3.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.19.3",
    "@remix-run/eslint-config": "^1.19.3",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.2.72",
    "@types/react-dom": "^18.2.22",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-remix": "^0.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-minify": "^1.1.0",
    "postcss-preset-env": "^9.5.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=1 lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|mjs|ts|tsx|css|md|yml)": [
      "prettier --write"
    ]
  },
  "sideEffects": false
}
